{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "lib": ["es2018", "dom"],
    "jsx": "preserve",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
